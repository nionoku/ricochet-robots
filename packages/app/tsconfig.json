{
  "extends": ["@vue/tsconfig/tsconfig.dom.json", "../../tsconfig.json"],
  "compilerOptions": {
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "#app-config": [
        "../../config/app-config.json"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "#host/*": [
        "../../packages/host/src/*"
      ]
    }
  },
  "include": [
    "src",

    "vite.config.ts",
    "../../env.d.ts"
  ]
}
